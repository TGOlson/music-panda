<script type="text/javascript">

	var pl = 'home';
	var md = 'smile';
	var vl = 'up';

	function place(level) {	
		if (level == 'home') document.getElementById('placelevel').innerHTML =('<i class="icon-home icon-4x"></i>');
		if (level == 'leaf') document.getElementById('placelevel').innerHTML =('<i class="icon-leaf icon-4x"></i>');			
		if (level == 'truck') document.getElementById('placelevel').innerHTML =('<i class="icon-truck icon-4x"></i>');
		pl = level;
	}

	function mood(level) {	
		if (level == 'smile') document.getElementById('moodlevel').innerHTML =('<i class="icon-smile icon-4x"></i>');
		if (level == 'meh') document.getElementById('moodlevel').innerHTML =('<i class="icon-meh icon-4x"></i>');			
		if (level == 'frown') document.getElementById('moodlevel').innerHTML =('<i class="icon-frown icon-4x"></i>');	
		md = level;
	}

	function volume(level) {	
		if (level == 'up') document.getElementById('volumelevel').innerHTML =('<i class="icon-volume-up icon-4x"></i>');
		if (level == 'down') document.getElementById('volumelevel').innerHTML =('<i class="icon-volume-down icon-4x"></i>');			
		if (level == 'off') document.getElementById('volumelevel').innerHTML =('<i class="icon-volume-off icon-4x"></i>');	
		vl = level;
	}
		

	function getstation() {				
				
		var dash = "-";
		var combo = pl.concat(dash,md,dash,vl); 
		
		switch (combo) {
		  case "home-smile-up" : rec="Queen"; break;
		  case "home-smile-down" : rec="The Red Hot Chili Peppers"; break;
		  case "home-smile-off" : rec="Jewel"; break; 
		  case "home-meh-up" : rec="Puff Daddy"; break;
		  case "home-meh-down" : rec="Pink Floyd"; break;
		  case "home-meh-off" : rec="Santana"; break; 
		  case "home-frown-up" : rec="Nine Inch Nails"; break;
		  case "home-frown-down" : rec="Nirvana"; break;
		  case "home-frown-off" : rec="Elliot Smith"; break;
		  
		  case "leaf-smile-up" : rec="Notorious B.I.G."; break;
		  case "leaf-smile-down" : rec="The Greatful Dead"; break;
		  case "leaf-smile-off" : rec="Taylor Swift"; break;
		  case "leaf-meh-up" : rec="Lynyrd Skynyrd"; break;
		  case "leaf-meh-down" : rec="Blink 182"; break;
		  case "leaf-meh-off" : rec="Iron and Wine"; break;
		  case "leaf-frown-up" : rec="Tyler The Creator"; break;
		  case "leaf-frown-down" : rec="The White Stripes"; break;
		  case "leaf-frown-off" : rec="Counting Crows"; break;
		  
		  case "truck-smile-up" : rec="Weezer"; break;
		  case "truck-smile-down" : rec="The Alabama Shakes"; break;
		  case "truck-smile-off" : rec="Death Cab for Cutie"; break;
		  case "truck-meh-up" : rec="Artic Monkeys"; break;
		  case "truck-meh-down" : rec="Mos Def"; break;
		  case "truck-meh-off" : rec="Atmosphere"; break;
		  case "truck-frown-up" : rec="The XX"; break;
		  case "truck-frown-down" : rec="Nas"; break;
		  case "truck-frown-off" : rec="Regina Spector"; break;  
		  default: rec="Pick something, brother!";
		  }			
			
		var rand = Math.floor((Math.random()*10)+1);
		var wit = '';
		var punct = '';
		
		switch(rand) {
			case 1 : wit="You ever try "; punct="?"; break;
			case 2 : wit="How about "; punct="?"; break;
			case 3 : wit="I'd recommend "; punct=""; break;
			case 4 : wit="Queue up "; punct=""; break;
			case 5 : wit="I think you'd like "; punct=""; break;
			case 6 : wit="Give a listen to "; punct=" a try"; break;
			case 7 : wit="The Panda says "; punct=""; break;
			case 8 : wit="Maybe "; punct="?"; break;
			case 9 : wit="You want "; punct=""; break;
			case 10 : wit="Get down with some "; punct=""; break;
			}
		
			document.getElementById('output').innerHTML =(wit);
			document.getElementById('band').innerHTML =(rec);
//			document.getElementById('output2').innerHTML =(punct);
	}
	
</script>
</head>

